#include <iostream>
#include <iomanip>
#include <math.h>
using namespace std;

int main() {
    srand(time(NULL));
    const int n = 13;
    int mas[n], count=0, max, maxInd;
    
    for (int i = 0; i < n; i++) {
        mas[i]=rand()%33-10;
        cout << "mas[" << i << "]= " << mas[i] << endl;
    }
    
    for (int i = 0; i < n; i++) {
        if (mas[i] < 0) {
            cout << "[" << mas[i] << "]";
        }
    }
    
    for (int i = 0; i < n; i++) {
        if (mas[i] == 0) {
            count++;
        }
    }
    
    cout << "count = " << count;
    max = mas[0];
    maxInd=0;
    for (int i = 0; i < n; i++) {
        if (mas[i] > max) {
            max=mas[i];
            maxInd=1;
        }
    }
    
    cout << "max = " << max / 3 << endl << "maxInd = " << maxInd;
}